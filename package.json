{
  "name": "monorepo",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "inicio": "apps/jsonTransactionSchema.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug":"nest start producer --debug 0.0.0.0:9229 --watch",


    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/monorepo/test/jest-e2e.json",
    "migration:drop": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm schema:drop -d ./ormconfig.ts"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.2.1",
    "@nestjs/common": "^9.0.8",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/swagger": "^6.0.5",
    "@nestjs/typeorm": "^9.0.0",
    "@nestjsx/crud-request": "^5.0.0-alpha.3",
    "@sinclair/typebox": "^0.24.42",
    "ajv": "^8.11.0",
    "class-transformer": "^0.5.1",
    "express": "^4.18.1",
    "fake-json": "^0.1.0",
    "json-schema-faker": "^0.5.0-rcv.44",
    "kafkajs": "^2.2.0",
    "multer": "^1.4.5-lts.1",
    "nestjs-request-context": "^2.0.1",
    "pg": "^8.7.3",
    "postgres": "^3.2.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "superagent": "^8.0.0",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.2.4",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      ".module.ts"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/postgres(|/.*)$": "<rootDir>/libs/postgres/src/$1",
      "^@app/postgresql(|/.*)$": "<rootDir>/libs/postgresql/src/$1"
    }
  }
}
